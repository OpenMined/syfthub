# Development Dockerfile for SyftHub Frontend
# Optimized for use with docker-compose volume mounts
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy SDK first (required for file: dependency resolution)
COPY sdk/typescript /sdk/typescript

# Copy frontend package files only (source code is volume-mounted in docker-compose)
COPY frontend/package*.json ./

# Install dependencies with retry settings for reliability
RUN npm config set fetch-retry-mintimeout 20000 && \
    npm config set fetch-retry-maxtimeout 120000 && \
    npm ci && \
    npm cache clean --force

# Copy only essential config files (source is volume-mounted)
# These are copied in case volume mounts aren't used
COPY frontend/vite.config.ts frontend/tsconfig.json frontend/tailwind.config.js ./
COPY frontend/index.html ./

# Expose development server port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://127.0.0.1:3000/ || exit 1

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

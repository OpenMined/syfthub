# SyftHub Environment Configuration Example
# Copy this file to .env and update with your values

# Environment (development, production, testing)
ENVIRONMENT=development

# API Configuration
API_PORT=8000
HOST=0.0.0.0
WORKERS=4
LOG_LEVEL=info

# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite:///./data/syfthub.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://syfthub:password@localhost:5432/syfthub
# DB_PASSWORD=your_secure_password_here

# MySQL/MariaDB (alternative)
# DATABASE_URL=mysql://syfthub:password@localhost:3306/syfthub

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Redis Configuration (optional, for caching and token blacklist)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=redis_password

# Admin User (created on first run if set)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin_password_change_me
ADMIN_EMAIL=admin@example.com

# Backup Configuration
BACKUP_RETENTION_DAYS=7
S3_BUCKET=
GCS_BUCKET=
AZURE_CONTAINER=

# Monitoring (optional)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Email Configuration (for future use)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@syfthub.com

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_OAUTH=false
ENABLE_2FA=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_UPLOAD_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf,.csv,.json

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

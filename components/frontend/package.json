{
  "name": "syfthub-ui",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "description": "SyftHub UI - Modern React application with TypeScript and Shadcn/ui",
  "scripts": {
    "postinstall": "husky && playwright install",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext ts --ext tsx ./src",
    "lint:fix": "eslint --ext ts --ext tsx ./src --fix",
    "format": "prettier --write **/**/*.{html,css,scss,js,jsx,cjs,mjs,ts,tsx,mdx} --cache",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@react-oauth/google": "^0.12.2",
    "@syfthub/sdk": "file:../../sdk/typescript",
    "@tanstack/react-query": "^5.90.20",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "0.544.0",
    "radix-ui": "^1.4.3",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.71.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.12.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "3.3.1",
    "zod": "^3.25.76",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@playwright/test": "1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "^22.0.0",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react-swc": "4.1.0",
    "cssnano": "^7.1.2",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "61.0.2",
    "husky": "9.1.7",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "sass": "1.92.1",
    "tailwindcss": "^4.1.17",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.0",
    "vite": "7.2.4",
    "vitest": "^4.0.18"
  }
}

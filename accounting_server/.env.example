# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ledger
DATABASE_POOL_SIZE=10

# Redis (optional - uses in-memory store if not provided)
# REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-key-that-is-at-least-32-characters-long
JWT_ISSUER=ledger-api
JWT_AUDIENCE=ledger-api

# Stripe Configuration (optional)
# STRIPE_API_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal Configuration (optional)
# PAYPAL_CLIENT_ID=...
# PAYPAL_CLIENT_SECRET=...
# PAYPAL_WEBHOOK_ID=...
# PAYPAL_SANDBOX=true

# PIX (Brazilian Instant Payment) - Ef√≠/Gerencianet
# Get credentials from: https://dev.efipay.com.br
# PIX_ENABLED=false
# PIX_PROVIDER=efi
# PIX_CLIENT_ID=Client_Id_xxx
# PIX_CLIENT_SECRET=Client_Secret_xxx
# PIX_BASE_URL=https://pix-h.api.efipay.com.br
# PIX_RECEIVER_KEY=your-pix-key@email.com
# PIX_MERCHANT_NAME=YOUR COMPANY
# PIX_MERCHANT_CITY=SAO PAULO
# PIX_CERTIFICATE_PATH=./certs/cert.pem
# PIX_CERTIFICATE_KEY_PATH=./certs/key.pem
# PIX_WEBHOOK_URL=https://yoursite.com/webhooks/pix
# PIX_WEBHOOK_SECRET=your_webhook_secret
# PIX_SANDBOX=true

# Xendit (Southeast Asia) - optional
# Get your API keys from: https://dashboard.xendit.co/settings/developers#api-keys
# XENDIT_ENABLED=true
# XENDIT_API_KEY=xnd_development_YOUR_API_KEY
# XENDIT_WEBHOOK_TOKEN=YOUR_WEBHOOK_TOKEN
# XENDIT_BASE_URL=https://api.xendit.co
# XENDIT_DEFAULT_COUNTRY=ID
# XENDIT_DEFAULT_CURRENCY=IDR
# XENDIT_SUCCESS_REDIRECT_URL=https://yoursite.com/payment/success
# XENDIT_FAILURE_REDIRECT_URL=https://yoursite.com/payment/failure
# XENDIT_SANDBOX=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info

# SyftHub API Configuration
# Copy this file to .env and fill in your values

# Required: URL of your SyftHub backend instance
SYFTHUB_URL=http://localhost:8080

# Required: Your SyftHub API token (PAT)
# Create one at https://your-syfthub-instance/settings/tokens
SYFTHUB_API_KEY=syft_pat_xxxxx...

# Required: The publicly accessible URL of your SyftAI Space
# For tunneling mode, use: tunneling:your-username
SPACE_URL=http://localhost:8001

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Optional: Server configuration (ignored in tunneling mode)
SERVER_HOST=0.0.0.0
SERVER_PORT=8001
